/* 日记列表页样式 */
.page {
  padding: 20rpx;
  padding-bottom: 180rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 搜索栏 */
.search-bar {
  margin-bottom: 20rpx;
}

.search-input-wrap {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 40rpx;
  padding: 16rpx 24rpx;
}

.search-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
}

/* 日记卡片 */
.diary-list {
  display: flex;
  flex-direction: column;
}

.diary-card {
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.diary-cover {
  width: 100%;
  height: 300rpx;
  background-color: #f5f5f5;
}

.diary-cover-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #D1FAE5 0%, #A7F3D0 100%);
}

.diary-cover-placeholder text {
  font-size: 80rpx;
}

.diary-content {
  padding: 24rpx;
}

.diary-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.diary-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.diary-date {
  font-size: 24rpx;
  color: #999;
  flex-shrink: 0;
  margin-left: 20rpx;
}

.diary-summary {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.diary-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.diary-location {
  display: flex;
  align-items: center;
}

.location-icon {
  font-size: 24rpx;
  margin-right: 6rpx;
}

.location-text {
  font-size: 24rpx;
  color: #10B981;
}

.diary-weather {
  font-size: 24rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  padding: 40rpx;
  color: #999;
}

.load-more {
  display: flex;
  justify-content: center;
  padding: 30rpx;
  color: #10B981;
  font-size: 28rpx;
}

/* 浮动按钮 */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: 200rpx;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #10B981 0%, #059669 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(16, 185, 129, 0.4);
}

.fab text {
  font-size: 56rpx;
  color: #fff;
  font-weight: 300;
}
