/* 附近推荐页样式 */
.page {
  padding-bottom: 40rpx;
  min-height: 100vh;
  box-sizing: border-box;
  background-color: #f5f5f5;
}

/* 分类标签 */
.category-tabs {
  display: flex;
  background-color: #fff;
  padding: 20rpx;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  border-radius: 30rpx;
  margin: 0 8rpx;
}

.tab-item.active {
  background-color: #D1FAE5;
  color: #10B981;
  font-weight: 500;
}

/* 商户列表 */
.place-list {
  padding: 20rpx;
}

.place-card {
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.place-image {
  width: 100%;
  height: 300rpx;
  background-color: #f0f0f0;
}

.place-info {
  padding: 24rpx;
}

.place-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.place-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.place-rating {
  display: flex;
  align-items: center;
  flex-shrink: 0;
  margin-left: 16rpx;
}

.rating-star {
  font-size: 24rpx;
  margin-right: 4rpx;
}

.rating-value {
  font-size: 28rpx;
  color: #F59E0B;
  font-weight: bold;
}

.place-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 12rpx;
}

.tag {
  padding: 6rpx 16rpx;
  background-color: #f5f5f5;
  border-radius: 20rpx;
  font-size: 22rpx;
  color: #666;
  margin-right: 12rpx;
  margin-bottom: 8rpx;
}

.place-address {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.place-distance {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.place-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 26rpx;
  border-radius: 36rpx;
  background-color: #f5f5f5;
  color: #666;
  border: none;
  padding: 0;
}

.action-btn.primary {
  background-color: #10B981;
  color: #fff;
}

.action-btn::after {
  border: none;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  padding: 60rpx;
  color: #999;
}
