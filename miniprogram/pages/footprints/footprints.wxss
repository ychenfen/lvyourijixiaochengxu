/* 地图足迹页样式 */
.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

/* 地图 */
.map {
  width: 100%;
  height: 50vh;
}

/* 统计栏 */
.stats-bar {
  display: flex;
  justify-content: space-around;
  padding: 24rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #10B981;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

/* 足迹列表 */
.footprint-list {
  flex: 1;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  overflow: hidden;
}

.list-header {
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.list-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.list-scroll {
  flex: 1;
}

.footprint-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.footprint-marker {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.footprint-marker text {
  font-size: 24rpx;
  color: #fff;
  font-weight: bold;
}

.footprint-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.footprint-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.footprint-date {
  font-size: 24rpx;
  color: #999;
}

.footprint-arrow {
  font-size: 28rpx;
  color: #ccc;
}

.empty-tip {
  display: flex;
  justify-content: center;
  padding: 60rpx;
  color: #999;
  font-size: 28rpx;
}

/* 定位按钮 */
.location-btn {
  position: fixed;
  right: 30rpx;
  bottom: calc(50vh + 80rpx);
  width: 80rpx;
  height: 80rpx;
  background-color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.location-btn text {
  font-size: 40rpx;
}
