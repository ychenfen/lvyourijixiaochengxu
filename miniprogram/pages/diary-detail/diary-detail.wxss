/* 日记详情页样式 */
.page {
  min-height: 100vh;
  background-color: #fff;
  padding-bottom: 120rpx;
}

/* 封面轮播 */
.cover-swiper {
  width: 100%;
  height: 500rpx;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.cover-placeholder {
  width: 100%;
  height: 400rpx;
  background: linear-gradient(135deg, #D1FAE5 0%, #A7F3D0 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.cover-placeholder text {
  font-size: 120rpx;
}

/* 内容区域 */
.content-area {
  padding: 30rpx;
}

/* 标题和日期 */
.header {
  margin-bottom: 24rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.date {
  font-size: 26rpx;
  color: #999;
}

/* 位置和天气 */
.meta-info {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.meta-item {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
  margin-bottom: 10rpx;
}

.meta-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.meta-text {
  font-size: 26rpx;
  color: #10B981;
}

/* 正文内容 */
.content {
  margin-bottom: 30rpx;
}

.content-text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.8;
  white-space: pre-wrap;
}

/* 图片网格 */
.image-grid {
  display: flex;
  flex-wrap: wrap;
  margin: -8rpx;
}

.grid-image {
  width: calc(33.33% - 16rpx);
  height: 200rpx;
  margin: 8rpx;
  border-radius: 12rpx;
}

.grid-image.single {
  width: calc(100% - 16rpx);
  height: 400rpx;
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  padding: 20rpx 0;
  border-top: 1rpx solid #f0f0f0;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx 40rpx;
}

.action-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.action-text {
  font-size: 24rpx;
  color: #666;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  color: #999;
}

/* 错误状态 */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 40rpx;
}

.error-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.error-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}
