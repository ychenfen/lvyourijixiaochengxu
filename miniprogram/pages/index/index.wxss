/* 首页样式 */
.page {
  padding: 20rpx;
  padding-bottom: 120rpx;
}

/* 天气卡片 */
.weather-card {
  border-radius: 24rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
}

.weather-bg {
  background: linear-gradient(135deg, #10B981 0%, #059669 100%);
  padding: 40rpx;
}

.weather-loading {
  background: linear-gradient(135deg, #10B981 0%, #059669 100%);
  padding: 60rpx 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.weather-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.weather-left {
  display: flex;
  align-items: center;
}

.weather-icon {
  font-size: 80rpx;
  margin-right: 20rpx;
}

.weather-info {
  display: flex;
  flex-direction: column;
}

.temperature {
  font-size: 56rpx;
  font-weight: bold;
  color: #fff;
}

.weather-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.weather-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.location-name {
  font-size: 28rpx;
  color: #fff;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.weather-detail {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 功能入口 */
.feature-grid {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 22%;
}

.feature-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
}

.feature-icon text {
  font-size: 44rpx;
}

.bg-green {
  background-color: #D1FAE5;
}

.bg-blue {
  background-color: #DBEAFE;
}

.bg-orange {
  background-color: #FEF3C7;
}

.bg-purple {
  background-color: #EDE9FE;
}

.feature-text {
  font-size: 24rpx;
  color: #666;
}

/* 区块 */
.section {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-more {
  font-size: 26rpx;
  color: #10B981;
}

/* 日记列表 */
.diary-list {
  display: flex;
  flex-direction: column;
}

.diary-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.diary-item:last-child {
  border-bottom: none;
}

.diary-cover {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  flex-shrink: 0;
  background-color: #f5f5f5;
}

.diary-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.diary-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.diary-summary {
  font-size: 26rpx;
  color: #666;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin: 8rpx 0;
}

.diary-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.diary-location {
  font-size: 24rpx;
  color: #10B981;
}

.diary-date {
  font-size: 24rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.empty-state .btn {
  width: 300rpx;
}
