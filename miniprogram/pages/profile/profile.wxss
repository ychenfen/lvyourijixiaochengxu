/* 个人中心页样式 */
.page {
  padding: 20rpx;
  padding-bottom: 120rpx;
  min-height: 100vh;
  box-sizing: border-box;
  background-color: #f5f5f5;
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #10B981 0%, #059669 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 24rpx;
}

.avatar-placeholder {
  background-color: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-placeholder text {
  font-size: 60rpx;
}

.user-detail {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  display: block;
  margin-bottom: 8rpx;
}

.user-id {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 统计数据 */
.stats-card {
  display: flex;
  background-color: #fff;
  border-radius: 24rpx;
  padding: 30rpx 0;
  margin-bottom: 20rpx;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #10B981;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background-color: #f0f0f0;
  align-self: center;
}

/* 功能菜单 */
.menu-card {
  background-color: #fff;
  border-radius: 24rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.menu-arrow {
  font-size: 28rpx;
  color: #ccc;
}

/* 退出登录 */
.logout-btn {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.logout-btn text {
  font-size: 30rpx;
  color: #EF4444;
}

/* 版本信息 */
.version {
  text-align: center;
  padding: 40rpx;
}

.version text {
  font-size: 24rpx;
  color: #999;
}
