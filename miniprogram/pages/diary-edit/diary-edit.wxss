/* 日记编辑页样式 */
.page {
  padding: 20rpx;
  padding-bottom: 180rpx;
  min-height: 100vh;
  box-sizing: border-box;
  background-color: #fff;
}

/* 表单项 */
.form-item {
  margin-bottom: 30rpx;
  position: relative;
}

/* 标题输入 */
.title-input {
  font-size: 36rpx;
  font-weight: bold;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 内容输入 */
.content-input {
  width: 100%;
  min-height: 300rpx;
  font-size: 30rpx;
  line-height: 1.8;
  padding: 20rpx 0;
}

/* 字数统计 */
.char-count {
  position: absolute;
  right: 0;
  bottom: 10rpx;
  font-size: 24rpx;
  color: #999;
}

/* 区块标题 */
.section-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

/* 图片上传 */
.image-upload {
  display: flex;
  flex-wrap: wrap;
  margin: -10rpx;
}

.image-item {
  position: relative;
  width: calc(33.33% - 20rpx);
  margin: 10rpx;
}

.uploaded-image {
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
}

.delete-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 28rpx;
}

.add-image {
  width: calc(33.33% - 20rpx);
  height: 200rpx;
  margin: 10rpx;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fafafa;
}

.add-icon {
  font-size: 60rpx;
  color: #ccc;
  line-height: 1;
}

.add-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 位置选择 */
.location-picker {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
}

.picker-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.picker-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.picker-text.placeholder {
  color: #999;
}

.picker-arrow {
  font-size: 28rpx;
  color: #999;
}

/* 天气信息 */
.weather-info {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background-color: #D1FAE5;
  border-radius: 12rpx;
}

.weather-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.weather-text {
  flex: 1;
  font-size: 28rpx;
  color: #10B981;
}

.weather-auto {
  font-size: 24rpx;
  color: #059669;
}

.weather-loading {
  padding: 24rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  text-align: center;
  font-size: 26rpx;
  color: #999;
}

/* 提交区域 */
.submit-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background-color: #fff;
  border-top: 1rpx solid #f0f0f0;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.submit-area .btn {
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
}
